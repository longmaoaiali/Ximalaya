<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selector_search_recommend_bg">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/search_recommend_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/search_icon"/>


    <TextView
        android:layout_toRightOf="@+id/search_recommend_icon"
        android:id="@+id/search_recommend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="我是标题..."
        android:textSize="16sp"
        android:textColor="#979797"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#99979797"/>

</RelativeLayout>